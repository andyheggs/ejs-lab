<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Menu</title>
</head>
<body>
    <%- include('./partials/nav') %>

  <h1>Full Menu</h1>

  <h2>Mains</h2>

  <% menu.filter(item => item.category === 'mains').forEach(item => { %>

    <div>

        <h3><%= item.name %></h3>

        <p>Price: <%= item.price %></p>

        <p>Rating: <%= item.rating %></p>

        <p>Detais: <%= item.rating %></p>

    </div>

    <% }) %>   

    <h2>Deserts</h2>

    <% menu.filter(item => item.category === 'desserts').forEach(item => { %>

   <div>

       <h3><%= item.name %></h3>

       <p>Price: <%= item.price %></p>

       <p>Rating: <%= item.rating %></p>

       <p>Detais: <%= item.rating %></p>

   </div>

    <% }) %>
    
    <h2>Sides</h2>

    <% menu.filter(item => item.category === 'sides').forEach(item => { %>

   <div>

       <h3><%= item.name %></h3>

       <p>Price: <%= item.price %></p>

       <p>Rating: <%= item.rating %></p>

       <p>Detais: <%= item.rating %></p>

   </div>

    <% }) %>   

</body>
</html>
